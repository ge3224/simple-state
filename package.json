{
  "name": "@simple-state/core",
  "version": "0.1.2",
  "description": "State management for TypeScript. Type-safe, reactive storage with immutability protectionâ€”~150 lines, zero dependencies, built to be vendored and audit-friendly.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "VITE_ROOT=examples vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "build": "vite build",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "keywords": [
    "state",
    "state-management",
    "typescript",
    "reactive",
    "lightweight",
    "simple",
    "observable",
    "subscriber",
    "vanilla",
    "zero-dependencies"
  ],
  "author": {
    "name": "Jacob Benison",
    "url": "https://jacobbenison.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ge3224/simple-state.git"
  },
  "bugs": {
    "url": "https://github.com/ge3224/simple-state/issues"
  },
  "homepage": "https://github.com/ge3224/simple-state#readme",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@9.0.0"
}
